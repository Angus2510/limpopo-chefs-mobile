{
  "expo": {
    "name": "Limpopo Chefs Academy",
    "slug": "limpopo-chefs-mobile",
    "version": "1.0.3",
    "description": "The official mobile app for Limpopo Chefs Academy students. Access your academic information, track progress, view announcements, manage attendance, and stay connected with your culinary education journey.",
    "orientation": "portrait",
    "icon": "assets/IconKitchen-Output/ios/AppIcon~ios-marketing.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "assets/logo-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.limpopoChefs.mobile",
      "userInterfaceStyle": "light",
      "buildNumber": "4",
      "requireFullScreen": false,
      "teamId": "YU3WA8Z4R7",
      "infoPlist": {
        "CFBundleDisplayName": "Limpopo Chefs Academy",
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for attendance tracking.",
        "NSLocationWhenInUseUsageDescription": "This app uses location services to verify attendance location.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "portal.limpopochefs.co.za": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionMinimumTLSVersion": "1.0",
              "NSExceptionRequiresForwardSecrecy": false
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "assets/IconKitchen-Output/android/play_store_512.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.limpopoChefs.mobile",
      "versionCode": 5,
      "userInterfaceStyle": "light",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET"
      ],
      "usesCleartextTraffic": false,
      "networkSecurityConfig": "network_security_config"
    },
    "web": {
      "favicon": "assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "b1dbc470-4e3c-4d09-8b0f-ab9117ed6f33"
      }
    },
    "owner": "anguscarey",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/b1dbc470-4e3c-4d09-8b0f-ab9117ed6f33"
    },
    "plugins": ["expo-font", "expo-build-properties"]
  }
}
